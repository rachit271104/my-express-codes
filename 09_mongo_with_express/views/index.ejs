<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="allchats.css">
    <title>all chats</title>
</head>
<body>
    <h1>All Chats</h1>
    <form method="get" action="/chats/new">
        <button>New Chat</button>
    </form>
    <% for(let chat of chats){ %>
        <div class="chat">
            <p>from: <i> <%= chat.from %></i>  &nbsp;-&nbsp;  To: <i> <%= chat.to %></i> </p>
            <div class="msg">
                <p>msg: <%= chat.msg %></p>
            </div>
            <!-- giving date and time -->
             <p><%= chat.created_at.toString().split(" ")[4] %></p>
             <p><%= chat.created_at.toString().split(" ").slice(0,4).join("-") %></p>
             <form action="/chats/<%= chat._id %>/edit" method="get">
                <button>Edit </button>
             </form>
             &nbsp;&nbsp;
             <form action="/chats/<%= chat._id %>?_method=DELETE" method="post">
                <button>delete </button>
             </form>
        </div>
    <% } %>
</body>
</html>